@model Pasifika.WebUI.Areas.Admin.ViewModels.BannerHomeEditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "BannerHome", FormMethod.Post, new { id = "formEdit", enctype = "multipart/form-data" }))
{
    <div class="jarviswidget" id="wid-id-10">
        <header>
            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
            <h2>Banner Home </h2>

        </header>

        <!-- widget div-->
        <div>
            <!-- widget edit box -->
            <div class="jarviswidget-editbox">
                <!-- This area used as dropdown edit box -->
            </div>

            <!-- end widget edit box -->
            <!-- widget content -->
            <div class="widget-body">
                <div class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Texto</label>
                            <div class="col-md-9">
                                @Html.TextArea("Texto", Model.BannerHome.Texto, new { @class = "summernote" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Texto2</label>
                            <div class="col-md-9">
                                @Html.TextArea("Texto2", Model.BannerHome.Texto2, new { @class = "summernote" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Texto Boton</label>
                            <div class="col-md-9">
                                @Html.TextBox("TextoBoton", Model.BannerHome.TextoBoton, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Alt</label>
                            <div class="col-md-9">
                                @Html.TextBox("Alt", Model.BannerHome.Alt, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Link</label>
                            <div class="col-md-9">
                                @Html.TextBox("Link", Model.BannerHome.Link, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Foto</label>
                            <div class="col-md-9">
                                @if (Model.BannerHome.Foto != null)
                                {
                                    @Html.Hidden("Foto", Model.BannerHome.Foto)
                                    <img src="~/Content/images/bannerhome/@Model.BannerHome.Foto" width="50" height="50" /><br />
                                }
                                <input type="file" name="file1" class="col-lg-12" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label"></label>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBox("Mostrar", Model.BannerHome.Mostrar)
                                        Mostrar
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <input id="btnEnviar" type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end widget content -->
        </div>
    </div>
}

@section scripts
{
    <script src="~/Areas/Admin/Content/js/plugin/ckeditor/config.js"></script>
    <script src="~/Areas/Admin/Content/js/plugin/ckeditor/ckeditor.js"></script>
    <script src="~/Areas/Admin/Content/js/plugin/ckeditor/styles.js"></script>
    <script src="~/Areas/Admin/Content/js/plugin/ckeditor/adapters/jquery.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.summernote').ckeditor({

            });

            $('#btnEnviar').click(function (e) {
                e.preventDefault();

                $("#formEdit").submit();
            });
        });
    </script>
}