@model Pasifika.WebUI.ViewModels.ColaboradoresIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header
{
    @Html.Action("Cargar", "Metatag", new { seccionId = 22 })
}

<div class="row">
    <div class="col-xs-12">

        <div class="row">
            <div class="col-xs-12">
                <div class="borde-top-gris">
                    <h1 class="titular-1 f-linea-gris text-center">
                        <span>COLABORADORES</span>
                    </h1>
                </div>
            </div>
        </div>

    </div>
</div>

@Html.Action("Cargar", "Banner", new { seccionId = 22, tipo = 2 })

<div class="row">
    <div class="col-xs-12">
        <p class="titular-2 texto-destacado">
            @Html.Action("Cargar", "Texto", new { seccionId = 22 })
        </p>
    </div>
</div>

<div class="thumbnails modulo">
    <!-- row thumbs -->
    <div class="row">
        @{int cant = 0;}
        @foreach (var p in Model.Partners)
        {
        <!-- thumb-->
            <div class="col-xs-4 text-center">
                @if (p.Link != null && p.Link != "")
                { 
                    <a href="@p.Link" class="thumbnail no-hover no-border">
                        <img alt="" src="~/Content/images/partner/@p.Foto" class="img-responsive">
                        <div class="caption">
                            <h2 class="texto-6">@p.Nombre</h2>
                            <p class="texto-5">@Html.Raw(p.Texto)</p>
                        </div>
                    </a>
                }
                else
                {
                    <div class="thumbnail no-hover no-border">
                        <img alt="" src="~/Content/images/partner/@p.Foto" class="img-responsive">
                        <div class="caption">
                            <h2 class="texto-6">@p.Nombre</h2>
                            <p class="texto-5">@Html.Raw(p.Texto)</p>
                        </div>
                    </div>
                }
            </div>
            
            cant++;
            if (cant % 3 == 0)
            {
                @:</div>
                @:<div class="row">
            }
        }
    </div>
</div>

@section scripts
{
    <script>
        $(function () {
            $('.flexslider').flexslider({
                animation: "fade",
                controlNav: true,
                directionNav: true
            });
        });
    </script>
}