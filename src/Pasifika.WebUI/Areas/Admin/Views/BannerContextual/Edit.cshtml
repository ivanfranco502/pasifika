@model Pasifika.WebUI.Areas.Admin.ViewModels.BannerContextualEditViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "BannerContextual", FormMethod.Post, new { id = "formEdit", enctype = "multipart/form-data" }))
{
    <div class="jarviswidget" id="wid-id-10">
        <header>
            <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
            <h2>Banner Contextual </h2>

        </header>

        <!-- widget div-->
        <div>
            <!-- widget edit box -->
            <div class="jarviswidget-editbox">
                <!-- This area used as dropdown edit box -->
            </div>

            <!-- end widget edit box -->
            <!-- widget content -->
            <div class="widget-body">

                <div class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Titulo</label>
                            <div class="col-md-9">
                                @Html.TextBox("Title", Model.BannerContextual.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Foto</label>
                            <div class="col-md-9">
                                @if (@Model.BannerContextual.Foto != null)
                                {
                                    <img src="~/Content/images/bannercontextual/@Model.BannerContextual.Pagina.Id/@Model.BannerContextual.Foto" width="50" height="50" /><br />
                                }
                                @Html.Hidden("Foto", Model.BannerContextual.Foto, new { @class = "form-control" })
                                <input type="file" name="file" class="col-lg-12" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Alt</label>
                            <div class="col-md-9">
                                @Html.TextBox("Alt", Model.BannerContextual.Alt, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Link</label>
                            <div class="col-md-9">
                                @Html.TextBox("Link", Model.BannerContextual.Link, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Orden</label>
                            <div class="col-md-9">
                                @Html.TextBox("Orden", Model.BannerContextual.Orden, new { @class = "form-control" })
                            </div>
                        </div>
                    </fieldset>


                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.Hidden("infoId", Model.BannerContextual.Id)
                                @if ((object)ViewBag.returnUrl != null)
                                {
                                    @Html.Hidden("returnUrl", (object)ViewBag.returnUrl.ToString());
                                }
                                <input id="btnEnviar" type="submit" class="btn btn-primary" value="Guardar" />

                                @if (Model.BannerContextual.Id > 0)
                                {
                                    <a class="btn btn-danger" href="@Url.RouteUrl(new { controller = "BannerContextual" ,
                                                         action = "Delete",
                                                         id = Model.BannerContextual.Id})">Eliminar</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end widget content -->
        </div>
    </div>
}

@section scripts
{

    <script type="text/javascript">
        $(document).ready(function () {

            $('#btnEnviar').click(function (e) {
                e.preventDefault();

                $("#formEdit").submit();
            });
        });
    </script>
}

