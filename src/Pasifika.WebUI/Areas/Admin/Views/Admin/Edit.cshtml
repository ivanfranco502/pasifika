@model Pasifika.WebUI.Areas.Admin.ViewModels.EditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.ValidationSummary(false)
<h2>Edit User</h2>
<div class="form-group">
    <label>Name</label>
    <p class="form-control-static">@Model.Usuario.Id</p>
</div>
@using (Html.BeginForm())
{
    @Html.Hidden("id", Model.Usuario.Id)
    <div class="form-group">
        <label>Email</label>
        @Html.TextBox("email", Model.Usuario.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" />
    </div>
    <!--
    <div class="form-group">
        <label>Admin</label>
        @Html.CheckBox("IsAdmin", Model.IsAdmin)

    </div>-->

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}